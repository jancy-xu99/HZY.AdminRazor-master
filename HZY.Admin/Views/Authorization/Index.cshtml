@{
    ViewData["Title"] = "登 录";
}

@section Styles{
    <style type="text/css">
        #hzy-login {
            background: #f0f2f5 url(/admin/hzyAdminUI/images/login-bg.svg) no-repeat 50%;
        }
    </style>
}
@section Scripts{
    <script type="text/javascript">
        var app = new Vue({
            el: "#hzy-login",
            data: {
                UserName: "admin",
                UserPassword: "123456",
                LoginCode: ""
            },
            mounted: function () {

            },
            methods: {
                check: function () {
                    hzyAdmin.post('/Authorization/Check', {
                        UserName: this.UserName,
                        UserPassword: this.UserPassword,
                        LoginCode: this.LoginCode
                    }, function (r) {
                        if (r.status != 1) return;
                        var key = `Authorization_${window.location.hostname}_${window.location.port}`;
                        hzyAdmin.setCookie(key, r.data.token);
                        window.location = '/';
                    });
                }
            }
        });
    </script>
}

<div id="hzy-login">
